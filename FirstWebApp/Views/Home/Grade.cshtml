@{
    ViewBag.Title = "Calculate Grade";
}

@model FirstWebApp.Models.GradeModel
<body>
    <div class="calc">
        <h2>Grade Calculator</h2>
        <form method="post" onsubmit="return false">
            <label>Assignments: </label>
            <input id="assignment" asp-for="assignment" />
            <br />
            <label>Group Project: </label>
            <input id="group" asp-for="group" />
            <br />
            <label>Quizzes: </label>
            <input id="quiz" asp-for="quiz" />
            <br />
            <label>Exams: </label>
            <input id="exam" asp-for="exam" />
            <br />
            <label>INTEX: </label>
            <input id="intex" asp-for="intex" />
            <br />
            <input type="submit" value="Calculate Grade" id="gradeCalc" />
            <div asp-validation-summary="All"></div>
        </form>
    </div>
    <h4 id="finalGrade"></h4>
</body>